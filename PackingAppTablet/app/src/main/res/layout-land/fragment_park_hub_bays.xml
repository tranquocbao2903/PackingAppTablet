<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.xyz.packingapptablet.Fragments.ParkHubBaysFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bays Parking"
                android:textColor="#fff"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#000"
            android:gravity="center|top"
            android:orientation="vertical">

            <GridView
                android:id="@+id/parkhubBays"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous_parkhub_bay_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="#006699"
                android:text="Previous"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/pagenumber_parkhub_textview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/next_parkhub_bay_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#006699"
                android:text="Next"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#000"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/updateAvailability"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Update availability"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/reportAbuse"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Report abuse"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
